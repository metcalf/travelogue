- @user.password = @user.password_confirmation = nil

#form_errors
  = error_messages_for :user

- remote_form_for :user, :url => users_path, :success => "Effect.BlindUp('signup_form')", :update => "form_errors", :html => {:id =>"signup_form"} do |f|

  %p
    = label_tag 'login'
    %br
    = f.text_field :login

  %p
    = label_tag 'email'
    %br
    = f.text_field :email

  %p
    = label_tag 'password'
    %br
    = f.password_field :password

  %p
    = label_tag 'password_confirmation', 'Confirm Password'
    %br
    = f.password_field :password_confirmation

  %p= submit_tag 'Sign up'
